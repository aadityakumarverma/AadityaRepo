<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OtpVerificationActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <TextView
            android:id="@+id/tvMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter the 4 digit sent to:"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            android:paddingHorizontal="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/tvMobileNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mobile Number"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:paddingHorizontal="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvMessage"
            />
        <!--    -->
        <LinearLayout
            android:id="@+id/ll_otpCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingHorizontal="15dp"
            android:weightSum="4"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvMobileNumber">

            <EditText
                android:layout_weight="1"
                android:id="@+id/et_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/otp_edittext_background"
                android:gravity="center"
                android:hint="•"
                android:textSize="14dp"
                android:paddingVertical="15dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="5dp"
                android:elevation="5dp"
                android:maxLength="1"
                android:digits="0123456789"
                android:inputType="number"
                android:textStyle="bold" />

            <EditText
                android:layout_weight="1"
                android:id="@+id/et_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="•"
                android:textSize="14dp"
                android:paddingVertical="15dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="5dp"
                android:elevation="5dp"
                android:maxLength="1"
                android:inputType="number"
                android:digits="0123456789"
                android:textStyle="bold"
                android:background="@drawable/otp_edittext_background"
                android:gravity="center"
                />
            <EditText
                android:layout_weight="1"
                android:id="@+id/et_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="5dp"
                android:elevation="5dp"
                android:hint="•"
                android:textSize="14dp"
                android:paddingVertical="15dp"
                android:layout_marginBottom="5dp"
                android:maxLength="1"
                android:inputType="number"
                android:digits="0123456789"
                android:textStyle="bold"
                android:background="@drawable/otp_edittext_background"
                android:gravity="center"
                />
            <EditText
                android:layout_weight="1"
                android:id="@+id/et_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="5dp"
                android:elevation="5dp"
                android:hint="•"
                android:textSize="14dp"
                android:paddingVertical="15dp"
                android:maxLength="1"
                android:inputType="number"
                android:digits="0123456789"
                android:textStyle="bold"
                android:background="@drawable/otp_edittext_background"
                android:gravity="center"
                />

        </LinearLayout>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSubmitOtp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:paddingVertical="15dp"
            android:textSize="20dp"
            android:layout_marginHorizontal="30dp"
            android:text="Submit"
            android:background="@drawable/btn_bg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ll_otpCode"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>